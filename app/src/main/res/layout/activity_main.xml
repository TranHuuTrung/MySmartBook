<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/b_g_view_color"
    android:layout_gravity="center"
   >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_weight="3"
        android:background="@drawable/image_tittle"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Tri Thức trong tầm tay bạn"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="#3883de"
        android:layout_weight="2"
        />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/action"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
         />
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Ứng dụng đọc sách thông minh"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="italic"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Miễn Phí"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        />
    </LinearLayout>

</LinearLayout>

